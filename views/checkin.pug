extends sidebar.pug
block contents
    .container-fluid
        .row.bg-title
            .col-lg-3.col-md-4.col-sm-4.col-xs-12
            h4.page-title Đăng kí phòng
        .row
            .col-md-2
            .col-md-8.col-xs-12
                .white-box
                    form.form-horizontal.form-material(method='POST' action='/control/checkin')
                        .form-group
                            label.col-md-12 Họ và tên
                            .col-md-12
                                input.form-control.form-control-line(type='text' placeholder='Nhập họ và tên' name='fullname')
                        .form-group
                            label.col-md-12 Phone No
                            .col-md-12
                                input.form-control.form-control-line(type='text' placeholder='123 456 7890' name='numberphone')
                        .form-group
                            label.col-md-12 Chứng minh thư
                            .col-md-12
                                input.form-control.form-control-line(type='text' placeholder='122 332 987' name='customer_id')
                        .form-group
                            label.col-sm-12 Phòng đặt
                            .col-sm-12
                                select(name='room_id').form-control.form-control-line
                                    each i in emptyRooms
                                        option(value=`${i.id}`)=`${i.room_name} (${i.type.type_name})`
                        .form-group
                            label.col-sm-12 Số người
                            .col-sm-12
                                select(name='person').form-control.form-control-line
                                    option(value=1) 1
                                    option(value=2) 2
                                    option(value=3) 3
                                    option(value=4) 4
                        .form-group
                            .col-sm-12
                                if emptyRooms.length
                                    button(type='submit').btn.btn-success Đặt phòng
                                else
                                    button(type='submit' disabled).btn.btn-success Đặt phòng
                                    div
                                        span.text-danger Hết phòng trống mất rối!
        .col-md-2